<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col s12">
	<h5><%= "您尚未提交报名信息，请在“前沿报名”进行提交。"  if @openid_results.count < 1%></h5> 
	<%  @openid_results.each do |result| %>

	    <% entry = Entry.new(result: result).values %>

	    <div class="card">
		<div class="card-content">
		    <table class="striped">
			<thead>
			    <tr>
				<th class="card-title"><%= result.form_name %></th>
			    </tr>
			</thead>

			<tbody>
			    <tr>
				<td>
				    <b>姓名：</b><%= entry['姓名']%>
				</td>
			    </tr>
			    <tr>
				<td>
				    <b>序号: </b><%= entry['序号']%>
				</td>
			    </tr>
			    <% if entry['广西区内报名'].to_s.match(/\d/) %>
				<tr>	
				    <td>
					<b>广西区内报名: </b><%= compact_empty(entry['广西区内报名']) %>
				    </td>
				</tr>
			    <% end %>
			    <% if entry['广西区外报名'].to_s.match(/\d/) %>
				<tr>
				    <td>
					<b>广西区外报名: </b><%= compact_empty(entry['广西区外报名']) %>
				    </td>
				</tr>
			    <% end %>
			    <% if entry['作品评审费'].to_s.match(/\d/) %>
				<tr>				
				    <td>
					<b>作品评审费: </b><%= compact_empty(entry['作品评审费']) %>
				    </td>
				</tr>
			    <% end %>
			    <tr>
				<td>
				    <b>确认码: </b><%= entry['确认码']%>
				</td>
			    </tr>
			    <tr>
				<td>
				    <b>提交时间: </b><%= entry['提交时间']%>
				</td>
			    </tr>
			</tbody>
		    </table>

		    <div class="card-action">
			<%= link_to '查看详情',{ controller: "results",action: 'show',id: result,  subject: result.class.name}, class: "waves-effect waves-light btn blue darken-1 white-text" %>
		    </div>

		</div>
	    </div>

	<% end %>
	<%= link_to '返回',  root_path, class: "waves-effect waves-light btn blue darken-1 white-text" %>
    </div>
</div>

